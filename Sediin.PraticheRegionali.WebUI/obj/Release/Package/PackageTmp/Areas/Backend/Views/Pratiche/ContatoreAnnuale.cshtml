@model IEnumerable<Sediin.PraticheRegionali.WebUI.Areas.Backend.Models.PraticheAzienda_ContatoreAnnuale>

@if (Model == null || Model?.Count() == 0)
{
    return;
}

<script>
    $(function () {
        $("#containerContatoreToast").draggable();
    });
</script>

<div class="position-fixed top-0 end-0 p-5" style="z-index: 110; padding-right:25px" id="containerContatoreToast">


    <div style="background-color:white; width:450px !important" id="contatoreToast" role="alert" aria-live="assertive" aria-atomic="true"
         class="toast fade show mb-2" data-autohide="false">
        <div class="toast-header">
            <svg class="bd-placeholder-img rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg"
                 preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                <rect fill="green" width="100%" height="100%"></rect>
            </svg>
            <strong class="mr-auto">Contatore Massimali</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>

        </div>
        <div class="toast-body">

            <div class="row fw-bold text-center">
                <div class="col-md-3">Data Inizio</div>
                <div class="col-md-3">Data Fine</div>
                <div class="col-md-3">Richiesto</div>
                <div class="col-md-3">Massimo</div>

            </div>

            @foreach (var item in Model)
            {
                <div class="row text-center">
                    <div class="col-md-3">@item.DataInizio.GetValueOrDefault().ToShortDateString()</div>
                    <div class="col-md-3">@item.DataFine.GetValueOrDefault().ToShortDateString()</div>
                    <div class="col-md-3">@Html.ToImporto(item.ImportoRichieste)</div>
                    <div class="col-md-3">@Html.ToImporto(item.TettoMassimo)</div>

                </div>
            }
        </div>
    </div>

</div>
