@model Sediin.PraticheRegionali.WebUI.Areas.Admin.Models.InsRegioni

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("Modifica", new AjaxOptions
{
    OnBegin = "alertWaid()",
    OnSuccess = "onSuccessModifica"
}))
{
    @Html.AntiForgeryToken()
    @Html.TextBoxFor(model => model.RegioneId, new { @hidden = true, @readonly = true })

    <h3>Modifica Regione</h3>
    <hr />
    <div class="form-horizontal">
        <div class="row">

            <div class="form-group col-md-12">
                @Html.Label("Denominazione", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.DenReg, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
                    @Html.ValidationMessageFor(model => model.DenReg, "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="form-group col-md-4">
                @Html.Label("Codice Regione", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.CodReg, new { htmlAttributes = new { @class = "form-control", @maxlength = "2" } })
                    @Html.ValidationMessageFor(model => model.CodReg, "", new { @class = "text-danger" })
                </div>
            </div>*@

            <div class="modal-footer row" style="margin-top: 30px">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Modifica" class="btn btn-success" />
                    <input type="button" value="Chiudi finestra" onclick="hideModal()" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
}
<script>
    function onSuccessModifica(data) {
        @Html.OnSuccessHideModal()
    }
</script>
