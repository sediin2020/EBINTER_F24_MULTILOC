@model Sediin.PraticheRegionali.WebUI.Areas.Admin.Models.AvvisoUtenteRicercaModel

<div class="row mb-4">
    <div class="col-md-12">
        @Ajax.EncodedAjaxActionLink("Nuovo Avviso utente", "Avviso", "AvvisoUtente", null, new AjaxOptions
                {
                OnBegin = "alertWaid()",
                OnSuccess = "showModal_NoFooter('Avviso utente',data); alertClose()",
                OnFailure = "handleError"
                }, new { @class = "btn btn-info" })
    </div>
</div>

@Html.RicercaModulo("Avvisi Utente", false)

@Html.UpdateListRicerca(Url.Action("Ricerca", "AvvisoUtente"), true)

<script>
    $().ready(function () {
        alertWaid();
        updateListRicerca(true);
    });
</script>