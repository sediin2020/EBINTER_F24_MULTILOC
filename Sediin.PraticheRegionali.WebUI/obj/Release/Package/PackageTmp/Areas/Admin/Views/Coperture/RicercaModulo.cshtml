@model Sediin.PraticheRegionali.WebUI.Areas.Admin.Models.CoperturaSearchModel

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("Ricerca", new AjaxOptions
{
    UpdateTargetId = "resultRicerca",
    OnBegin = "onBeginRicerca",
    OnSuccess = "alertClose",
}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("Azienda/Matricola", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Ragionesociale, new { @class = "form-control", type="search"})
                        @Html.HiddenFor(model => model.AziendaId, new { @class = "form-control", @maxlength = "10" })
                        @Html.ValidationMessageFor(model => model.AziendaId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>

        <hr />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Avvia ricerca</button>
        </div>
    </div>

}

@Html.AutocompleteAzienda("Ragionesociale", "AziendaId", "AziendaId", width: 450)



