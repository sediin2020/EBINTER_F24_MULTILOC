@model Sediin.PraticheRegionali.WebUI.Areas.Backend.Models.DipendenteAssociaAziendaRicercaModel

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("AziendeAssociateRicerca", new AjaxOptions
{
    UpdateTargetId = "resultRicerca",
    OnBegin = "onBeginRicerca",
    OnSuccess = "alertClose",
    OnFailure = "handleError"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.DipendenteAssociaRicercaModel_DipendenteId)
    <div class="form-horizontal">

        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.DipendenteAssociaRicercaModel_DipendenteId, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.DipendenteAssociaRicercaModel_NominativoCF,  new { @class = "form-control", type = "search"  })
                        @Html.ValidationMessageFor(model => model.DipendenteAssociaRicercaModel_DipendenteId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>


        <hr />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Avvia ricerca</button>
        </div>
    </div>
}

@Html.AutocompleteDipendenteSportello("DipendenteAssociaRicercaModel_NominativoCF", "DipendenteAssociaRicercaModel_DipendenteId", "DipendenteAssociaRicercaModel_DipendenteId")

<script src="~/Scripts/unobtrusiveParseForm.js"></script>
<script src="~/Scripts/checksumCFPiva.js"></script>
