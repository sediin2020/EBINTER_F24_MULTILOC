@model Sediin.PraticheRegionali.WebUI.Areas.Backend.Models.ProspettoRicercaViewModel

@if (Model.TotalRecords == 0)
{
    @Html.AlertDanger("Nessuna dato trovato");
    return;
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="text-center bg-dark text-white">
                    <th>Anno</th>
                    <th>Mese</th>
                    <th>Descrizione</th>
                    <th>Data Inserimeto</th>
                    <th>Numero Quote</th>
                    <th>Importo Totale</th>

                    <th style="width:125px"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Result.ToList())
                {
                    <tr class="text-center">
                        <td>
                            @item.Anno
                        </td>
                        <td>
                            @item.Mese
                        </td>
                        <td>
                            @item.Descrizione
                        </td>
                        <td>
                            @item.Data_Inserimento.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @item.Numero_Quote.GetValueOrDefault() 
                        </td>
                        <td>
                            @item.Importo_Totale.GetValueOrDefault() 
                        </td>
                        <td class="text-center">

                            @*@Ajax.EncodedAjaxActionLink($"<i class='fa fa-pencil'></i>", "Anagrafica", "ModuloF24", new
                       {
                           id = item.ProspettoId
                       }, new AjaxOptions
                       {
                           OnBegin = "alertWaid()",
                           OnSuccess = "showModal_NoHeaderFooter(data); alertClose()",
                           OnFailure = "handleError"
                       }, new { @class = "btn btn-sm btn-primary" })*@

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>


    @Html.PagingAjax(Model.PageSize, Model.CurrentPage, Model.TotalRecords,
        Url.Action("Ricerca"), Model.Filtri,
        new AjaxOptions
        {
            UpdateTargetId = "resultRicerca",
            HttpMethod = "post",
            OnFailure = "handleError"
        }, Url.Action("RicercaExcel"))
}