@model  Sediin.PraticheRegionali.WebUI.Areas.Admin.Models.MotivazioniModel

<div class="row mb-4">
    <div class="col-md-12">
        @Ajax.EncodedAjaxActionLink("Nuova Motivazione", "Nuovo", "Motivazioni", null, new AjaxOptions
                {
                OnBegin = "alertWaid()",
                OnSuccess = "showModalFullScreen_NoHeaderFooter(data); alertClose()",
                OnFailure = "handleError"
                }, new { @class = "btn btn-info" })
    </div>
</div>

@Html.RicercaModulo(Html.Partial("RicercaModulo", Model), "Ricerca Motivazione")

@Html.UpdateListRicerca(Url.Action("Ricerca", "Motivazioni"), true)
