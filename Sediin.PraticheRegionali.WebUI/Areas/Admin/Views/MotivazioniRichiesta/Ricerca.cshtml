@model  Sediin.PraticheRegionali.WebUI.Areas.Admin.Models.MotivazioniRichiestaSearchModel

<div class="row mb-4">
    <div class="col-md-12">
        @Ajax.EncodedAjaxActionLink("Nuova Motivazione Richiesta", "Nuovo", "MotivazioniRichiesta", null, new AjaxOptions
                {
                OnBegin = "alertWaid()",
                OnSuccess = "showModalFullScreen_NoHeaderFooter(data); alertClose()",
