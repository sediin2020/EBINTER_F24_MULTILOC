@model Sediin.PraticheRegionali.WebUI.Areas.Admin.Models.TipoRichiesteRicercaModel

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("Ricerca", new AjaxOptions
{
    UpdateTargetId = "resultRicerca",
    OnBegin = "onBeginRicerca",
    OnSuccess = "alertClose",
    OnFailure = "handleError"
}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <div class="row">

            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Anno", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Anno, new { @class = "form-control", @maxlength = "4" })
                        @Html.ValidationMessageFor(model => model.Anno, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Modulo", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Modulo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Modulo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @{

                        var _list = new List<SelectListItem>();

                        _list.Add(new SelectListItem { Text = "Abilitato", Value = "1" });
                        _list.Add(new SelectListItem { Text = "Non abilitato", Value = "0" });

                    }


                    @Html.Label("Abilitato per nuova richiesta", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.AbilitatoNuovaRichiesta, Html.SelectList(_list, "Value", "Text", true), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @{

                        var _list2 = new List<SelectListItem>();

                        _list2.Add(new SelectListItem { Text = "Dipendenti", Value = "1" });
                        _list2.Add(new SelectListItem { Text = "Aziende", Value = "0" });

                    }


                    @Html.Label("Prestazioni Regionali", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.IsTipoRichiestaDipendente, Html.SelectList(_list2, "Value", "Text", true), new { @class = "form-control" })
                    </div>
                </div>
            </div>

        </div>

        <hr />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Avvia ricerca</button>
        </div>
    </div>
}


<script src="~/Scripts/unobtrusiveParseForm.js"></script>
