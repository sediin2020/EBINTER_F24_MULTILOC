@model IEnumerable<Sediin.PraticheRegionali.DOM.Entitys.Allegati>

@if (Model == null || Model.Count() == 0)
{
    @Html.AlertDanger("Nessun Allegato trovato");
    return;
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="text-center bg-dark text-white">
                    <th>Nome</th>
                    <th style="width:150px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Azioni
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        @Ajax.EncodedAjaxActionLink("Modifica", "Modifica", "Allegati", new
                                   {
                                       id = item.AllegatoId
                                   }, new AjaxOptions
                                   {
                                       OnBegin = "alertWaid()",
                                       OnSuccess = "showModal_NoHeaderFooter(data); alertClose()",
                                       OnFailure = "handleError"
                                   }, new { @class = "dropdown-item" })
                                    </li>
                                    <li>
                                        @Ajax.EncodedAjaxActionLink("Elimina", "Elimina", "Allegati", new
                                   {
                                       allegatoId = item.AllegatoId,
                                   }, new AjaxOptions
                                   {
                                       OnBegin = "alertWaid()",
                                       OnSuccess = "showModal_NoHeaderFooter(data); alertClose()",
                                       OnFailure = "handleError"
                                   }, new { @class = "dropdown-item" })
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
